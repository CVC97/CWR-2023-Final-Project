    locale = DE,
    mode=text,
    output-decimal-marker = {,},
    exponent-product=\cdot,
    separate-uncertainty = true,
    range-phrase=~bis~,                 % für z.B. numrange oder SIrange
    %prefixes-as-symbols = false,
    %exponent-to-prefix = true,
    list-final-separator = {~und~},     % für z.B. numlist
    per-mode=fraction,
}

